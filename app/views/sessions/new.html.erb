<h4>Sign in</h4>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h5>
      <%= pluralize(@user.errors.count, "error") %>
      are keeping you from your gardens:
    </h5>

    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @user do |u| %>
  <%= u.label :email %>
  <%= u.text_field :email %>
    <br><br>
  <%= u.label :password %>
  <%= u.password_field :password %>
    <br><br>
  <%= u.submit %>
<% end %>

<%= link_to "Or sign in with Facebook", '/auth/facebook' %>
