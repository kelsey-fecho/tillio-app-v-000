<!DOCTYPE html>
<html>
<head>
  <title>Tillio</title>
  <%= favicon_link_tag asset_path('favicon.png'), :rel => 'icon', :type =>  'image/png' %>
  <%= stylesheet_link_tag 'application', media: 'all'%>
  <%= javascript_include_tag "application" %>
</head>
<body>
  <div class="nav">
    <a href="http://localhost:3000/"><%= image_tag "Tillio.jpg" %></a><br>
    <% if @current_user %>
    <%= link_to "All Plants", plants_path %> <%= link_to "Trees", plants_trees_path %> <%= link_to "Perennials", plants_perennials_path %>
    <%= button_to "Log Out", logout_path %>
    <% end %>
  </div>
  <%= yield %>
</body>
